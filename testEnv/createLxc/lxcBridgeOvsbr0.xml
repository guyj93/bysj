<domain type='lxc'>
	<name>lxcBridgeOvsbr0</name>
	<memory>102400</memory>
	<os>
		<type>exe</type>
		<init>/bin/bash</init>
	</os>
	<devices>
		<emulator>/usr/lib/libvirt/libvirt_lxc</emulator>
		<interface type='bridge'>
			<source bridge='ovsbr0'/>
			<virtualport type='openvswitch'/>
		</interface>
		<console type='pty' />		
	</devices>
</domain>
