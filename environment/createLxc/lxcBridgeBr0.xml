<domain type='lxc'>
	<name>lxcBridgeBr0</name>
	<memory>1048576</memory>
	<vcpu placement='static' cpuset='3'>1</vcpu>
	<os>
		<type>exe</type>
		<init>/bin/bash</init>
	</os>
	<devices>
		<emulator>/usr/lib/libvirt/libvirt_lxc</emulator>
		<interface type="bridge">
			<source bridge='br0' />		
		</interface>
		<console type='pty' />		
	</devices>
</domain>
